{
  "name": "@level-2-gym/backend",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22 <23",
    "pnpm": ">=10"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test:unit": "vitest run",
    "typecheck": "tsc --noEmit",
    "api:lint": "spectral lint openapi.yaml",
    "api:lint:json": "spectral lint openapi.yaml --format json",
    "api:docs": "echo 'API docs available at http://localhost:3000/docs when server is running'"
  },
  "dependencies": {
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@tanstack/ai": "^0.0.2",
    "@tanstack/ai-gemini": "^0.0.2",
    "@tanstack/ai-openai": "^0.0.2",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.2.3",
    "obscured": "^2.0.4",
    "uuidv7-utilities": "^3.1.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@stoplight/spectral-cli": "^6.15.0",
    "@stoplight/spectral-core": "^1.20.0",
    "@stoplight/spectral-rulesets": "^1.22.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitest/eslint-plugin": "^1.5.1",
    "eslint": "^9.39.1",
    "eslint-plugin-codegen": "^0.34.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.4.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
