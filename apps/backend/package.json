{
  "name": "@level-2-gym/backend",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22 <25",
    "pnpm": ">=10"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "api:lint": "spectral lint openapi.yaml",
    "api:lint:json": "spectral lint openapi.yaml --format json",
    "api:docs": "echo 'API docs available at http://localhost:3000/docs when server is running'",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "db:drop": "docker exec -i level2gym-postgres psql -U postgres -d level2gym < drizzle/drop_all_tables.sql",
    "db:reset": "pnpm db:drop && pnpm db:push"
  },
  "dependencies": {
    "@ai-sdk/google": "^2.0.44",
    "@fastify/cors": "^11.1.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@google/generative-ai": "^0.24.1",
    "ai": "^5.0.108",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.0",
    "fastify": "^5.2.3",
    "js-tiktoken": "^1.0.21",
    "obscured": "^2.0.4",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-logger": "^1.0.0",
    "uuidv7": "^1.1.0",
    "uuidv7-utilities": "^3.1.0",
    "yaml": "^2.8.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@stoplight/spectral-cli": "^6.15.0",
    "@stoplight/spectral-core": "^1.20.0",
    "@stoplight/spectral-rulesets": "^1.22.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/eslint-plugin": "^1.5.2",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.1",
    "eslint-plugin-codegen": "^0.34.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.5.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
