{
  "name": "@norbets-spark/backend",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22 <25",
    "pnpm": ">=10"
  },
  "scripts": {
    "dev": "tsx watch src/infrastructure/di/container/index.ts",
    "dev:debug": "tsx watch --inspect src/infrastructure/di/container/index.ts",
    "dev:ai": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --fix --cache",
    "test:unit": "vitest run --hideSkippedTests",
    "test:unit:coverage": "vitest run --coverage --hideSkippedTests",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "db:drop": "docker exec -i norbertsSpark-postgres psql -U postgres -d norbertsSpark < drizzle/drop_all_tables.sql",
    "db:reset": "pnpm db:drop && pnpm db:push",
    "seed:users": "tsx scripts/seed-users.ts"
  },
  "dependencies": {
    "@ai-sdk/google": "^2.0.51",
    "@fastify/cors": "^11.2.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.4",
    "@google/generative-ai": "^0.24.1",
    "@norberts-spark/shared": "workspace:*",
    "ai": "^5.0.116",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.6.2",
    "js-tiktoken": "^1.0.21",
    "jsonwebtoken": "^9.0.3",
    "obscured": "^2.0.4",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-logger": "^1.0.0",
    "resend": "^6.6.0",
    "uuidv7": "^1.1.0",
    "uuidv7-utilities": "^3.1.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@stoplight/spectral-cli": "^6.15.0",
    "@stoplight/spectral-core": "^1.20.0",
    "@stoplight/spectral-rulesets": "^1.22.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/eslint-plugin": "^1.6.5",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-plugin-codegen": "^0.34.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.5.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@10.25.0",
  "preinstall": "npx --yes only-allow pnpm"
}
