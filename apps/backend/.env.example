# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=norbertsSpark

# PostgreSQL initialization arguments
POSTGRES_INITDB_ARGS=-E UTF8 --locale=en_GB.UTF-8

# Database connection string for Drizzle ORM
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/norbertsSpark

GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_GENERATIVE_AI_API_KEY=your_google_generative_ai_api_key_here
MODEL_NAME=gemini-1.5-flash
RESEND_API_KEY=your_resend_api_key_here
UPSTASH_REDIS_REST_URL=as-provided-by-upstash
UPSTASH_REDIS_REST_TOKEN=as-provided-by-u

REQUEST_TIMEOUT=30000
CONNECTION_TIMEOUT=10000
KEEP_ALIVE_TIMEOUT=65000

# Server Configuration
# Set to 'true' to enable HTTPS in development
USE_HTTPS=true
JWT_SECRET='CLI generate secret: node -e "console.log(require(\"crypto\").randomBytes(48).toString(\"base64url\"))"'
# Shared secret for authenticating frontend OAuth sync requests to backend
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64url'))"
OAUTH_SYNC_SECRET=your-oauth-sync-shared-secret-here
# PORT=3001
# HOST=0.0.0.0
# API_VERSION=v1