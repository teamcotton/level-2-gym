# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=postgres

# Google AI SDK
GOOGLE_API_KEY=your-google-api-key-here

# OAuth Credentials
GOOGLE_ID=your_google_oauth_client_id_here
GOOGLE_SECRET=your_google_oauth_client_secret_here

# NextAuth Configuration
# The canonical URL of your site (required)
# Development: https://localhost:4321
# Production: https://your-domain.com
NEXT_PUBLIC_BASE_URL=https://localhost:4321
# A random string used to encrypt session tokens (required in production)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here

# Middleware Rate Limiting Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=10
# Comma-separated list of trusted proxy IPs for secure X-Forwarded-For validation
# Only requests from these IPs will have their X-Forwarded-For header trusted
# Default: 127.0.0.1,::1 (localhost IPv4 and IPv6)
# Production example: 10.0.0.1,10.0.0.2,10.0.0.3
TRUSTED_PROXIES=127.0.0.1,::1

# OAuth Provider Configuration (Optional)
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id-here
GITHUB_CLIENT_SECRET=your-github-client-secret-here

# Backend API Configuration
# The URL for the backend Fastify API
NEXT_PUBLIC_BACKEND_URL=http://localhost:3000
BACKEND_AI_CALLBACK_URL_DEV=https://127.0.0.1:3001
BACKEND_AI_CALLBACK_URL_PROD=https://example.com
BACKEND_AI_CALLBACK_URL=https://127.0.0.1:3001
# Avoid client side calls to the backend
NEXT_PUBLIC_POST_AI_CALLBACK_URL=https://127.0.0.1:3001/ai
# OAuth Sync Shared Secret
# Shared secret for authenticating frontend OAuth sync requests to backend
# Must match OAUTH_SYNC_SECRET in backend configuration
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64url'))"
OAUTH_SYNC_SECRET=your-oauth-sync-shared-secret-here


