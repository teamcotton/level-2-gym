{
  "name": "@norberts-spark/shared",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json && pnpm run build:openapi",
    "test": "pnpm run test:node && pnpm run test:browser",
    "test:node": "vitest run --config vitest.config.node.ts",
    "test:browser": "vitest run --config vitest.config.browser.ts",
    "test:coverage": "pnpm run test:node -- --coverage && pnpm run test:browser -- --coverage",
    "test:watch": "vitest watch --config vitest.config.node.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:api": "spectral lint --verbose ./src/openapi.json --ruleset ./src/.spectral.yaml",
    "lint:api:json": "spectral lint ./src/openapi.json --ruleset ./src/.spectral.yaml --format json",
    "docs:api": "redoc-cli serve ./src/openapi.json --watch --port 8080",
    "typecheck": "tsc --noEmit",
    "build:openapi": "openapi-typescript ./src/openapi.json --output ./dist/generated/openapi-types.ts"
  },
  "dependencies": {
    "zod": "^4.3.5"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./openapi-types": {
      "import": "./dist/generated/openapi-types.js",
      "types": "./dist/generated/openapi-types.d.ts"
    }
  },
  "devDependencies": {
    "@redocly/cli": "^2.14.3",
    "@stoplight/spectral-cli": "^6.15.0",
    "@vitest/coverage-v8": "^4.0.16",
    "jsdom": "^27.4.0",
    "openapi-typescript": "^7.10.1",
    "redoc-cli": "^0.13.21",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
